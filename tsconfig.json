{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
    "sourceMap": false,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*",
        "dist/*"
      ],
      "@controllers/*": [
        "src/controllers/*",
        "dist/controllers/*"
      ],
      "@services/*": [
        "src/services/*",
        "dist/services/*"
      ],
      "@constants/*": [
        "src/constants/*",
        "dist/constants/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*",
        "dist/interfaces/*"
      ],
      "@validates/*": [
        "src/validates/*",
        "dist/validates/*"
      ],
      "@root/*": [
        "./*"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}